<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

        <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/itemIV" android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:layout_alignParentLeft="true" android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:src="@drawable/japane"
                    android:layout_margin="5dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

            <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameTV" android:clickable="false"
                        android:layout_gravity="center"
                        android:gravity="center|center_vertical" android:textSize="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentTop="false" android:layout_toRightOf="@+id/itemIV"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:textColor="#ffffff"/>

            <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/priceTV"
                        android:layout_gravity="center"
                        android:textColor="#fff696"
                        android:textSize="20dp" android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="false"
                        android:gravity="center|center_vertical" android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:layout_margin="2dp"/>
        </LinearLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delIV"
                android:src="@drawable/delete2"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>